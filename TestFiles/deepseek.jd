// Generator
generator liczby_parzyste(int n) {
    var i = 0;
    while (i < n) {
        if ((i / 2) * 2 == i) {  // Zastąpione % operacjami podstawowymi
            yield i;
        }
        i = i + 1;
    }
}

for (liczba in liczby_parzyste(10)) {
    print(liczba);
}

