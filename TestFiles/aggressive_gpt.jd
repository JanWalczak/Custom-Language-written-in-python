    // Test 11: Obsługa zasięgu zmiennych (lokalne i globalne, shadowing)
    func scopeTest() {
        var localVar = "lokalny";
        print("Wewnetrzny localVar: " + localVar);
        {
            var localVar = "shadow";
            print("Shadow localVar: " + localVar);
        }
        print("Ponownie lokalny localVar: " + localVar);
    }
    scopeTest();

